{{#let
  (component
    "interact-base"
    style=this.style
    draggable=@draggable
    resizable=@resizable
    restrictToElement=@restrictToElement
    onDragMove=this.onMove
    onResizeMove=this.onResize
    onDragEnd=this.onInteractEnd
    onResizeEnd=this.onInteractEnd

  ) as |base|}}
  {{#if (has-block-params)}}
    {{yield
      (hash
        base=base
      )
    }}
  {{else}}
    {{#component base}}
      {{yield}}
    {{/component}}
  {{/if}}
{{/let}}
