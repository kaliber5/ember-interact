{{#let
  (component
    "interact-base"
    style=style
    draggable=draggable
    resizable=resizable
    restrictToElement=restrictToElement
    onDragMove=(action "onMove")
    onResizeMove=(action "onResize")
  ) as |base|}}
  {{#if (has-block-params)}}
    {{yield
      (hash
        base=base
      )
    }}
  {{else}}
    {{#component base}}
      {{yield}}
    {{/component}}
  {{/if}}
{{/let}}
