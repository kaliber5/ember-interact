{{#interact-element
  draggable=_draggable
  resizable=_resizable
  x=x
  y=y
  width=width
  height=height
  onChange=onChange
as |element|
}}
  {{#element.base
    onDown=(action "select")
    class=(if selected "interact--selected")
    restrictToElement=restrictToElement
  }}
    <div class="interact__inner">
      {{yield}}
    </div>
    {{#if showHandles}}
      {{#if hasUpperLeftHandle}}
        <div class="interact__handle interact__handle--corner interact__handle--ul"></div>
      {{/if}}
      {{#if hasUpperRightHandle}}
        <div class="interact__handle interact__handle--corner interact__handle--ur"></div>
      {{/if}}
      {{#if hasLowerLeftHandle}}
        <div class="interact__handle interact__handle--corner interact__handle--ll"></div>
      {{/if}}
      {{#if hasLowerRightHandle}}
        <div class="interact__handle interact__handle--corner interact__handle--lr"></div>
      {{/if}}

      {{#if hasTopCenterHandle}}
        <div class="interact__handle interact__handle--center interact__handle--tc"></div>
      {{/if}}
      {{#if hasRightCenterHandle}}
        <div class="interact__handle interact__handle--center interact__handle--rc"></div>
      {{/if}}
      {{#if hasBottomCenterHandle}}
        <div class="interact__handle interact__handle--center interact__handle--bc"></div>
      {{/if}}
      {{#if hasLeftCenterHandle}}
        <div class="interact__handle interact__handle--center interact__handle--lc"></div>
      {{/if}}
    {{/if}}
  {{/element.base}}
{{/interact-element}}